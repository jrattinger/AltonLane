<div class="blog-items-collection-view-cell-span3">
    <div class="blog-item-cell-grid">
        <div class="blog-item-cell-grid-image-wrapper">
            <a class="blog-item-cell-grid-link-image" href="/blog/{{url}}">
                <img class="blog-item-cell-grid-image" src="{{resizeImage thumbnailImage.name 'thumbnail'}}" data-id="{{id}}" itemprop="image">
            </a>
        </div>
    <div class="blog-item-cell-grid-details">
            <a class="blog-item-cell-grid-title" href="/blog/{{url}}">
                <span itemprop="name">{{title}}</span>
            </a>
        </div>
    </div>
</div>