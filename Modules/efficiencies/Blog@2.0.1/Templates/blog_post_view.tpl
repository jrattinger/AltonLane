<div class="blog-items-collection-view-cell-span3">
    <div class="blog-item-cell-grid">
        <div class="blog-item-cell-grid-image-wrapper">
            <a class="blog-item-cell-grid-link-image" href="{{url}}">
                <img class="blog-item-cell-grid-image" src="{{resizeImage image.name 'thumbnail'}}" data-id="{{internalid}}" data-name="{{image.name}}" alt="{{title}}" itemprop="image">
            </a>
        </div>
    <div class="blog-item-cell-grid-details">
            <a class="blog-item-cell-grid-title" href="{{url}}">
                <span itemprop="name">{{title}}</span>
            </a>
        </div>
    </div>
</div>