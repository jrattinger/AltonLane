<tr class="giftcertificate-details-results-table-row">
    <td class="giftcertificate-details-results-table-giftcode">
        <span class="giftcertificate-details-results-table-giftcode-label">{{translate 'Gift Certificate Code:'}} </span>
        <span class="giftcertificate-details-results-table-giftcode-value">{{giftcertcode}}</span>
    </td>
    <td class="giftcertificate-details-results-table-row-email">
        <span class="giftcertificate-details-results-table-row-email-label">{{translate 'Sent By:'}} </span>
        <span class="giftcertificate-details-results-table-row-email-value">{{email}}</span>
    </td>
    <td class="giftcertificate-details-results-table-row-originalamount">
        <span class="giftcertificate-details-results-table-row-originalamount-label">{{translate 'Original Amount:'}} </span>
        <span class="giftcertificate-details-results-table-row-originalamount-value">{{formatCurrency originalamount}}</span>
    </td>
    <td class="giftcertificate-details-results-table-row-action-remaining">
        <span class="giftcertificate-details-results-table-row-remainingamount-label">{{translate 'Remainaing Amount:'}} </span>
        <span class="giftcertificate-details-results-table-row-remainingamount-value">{{formatCurrency amountremaining}}</span>
    </td>
</tr>